<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head', {title: "Create new Sticker"}) %>
<body>
    <%- include('includes/header') %>
  <main class="content">
    <div style="display: flex; flex-flow: column; align-items: center;">
      <% if (isAuthenticated===true) { %>
      <h1>Create a new sticker</h2>
        <a href="/admin">Sticker-list</a>
        <form action="/created" method="POST">
          <input type="text" name="name" placeholder="Name" required /><br />
          <input type="text" name="id" placeholder="ID" required /><br />
          <input type="number" name="priceInCents" placeholder="price in cents" required min="0" step="1" /><br />
          <button type="submit">Save</button>
        </form>
        <% if (message) { %>
            <div class="feedback-bar">
                <p style="margin: auto;"><%= message %></p>
            </div>
        <% } %>
        <% } else { %>
          <form action="/create/auth" method="POST">
              <label for="pwd">Password:</label>
              <input name="pwd" placeholder="Enter Admin Password" id="pwd" type="password">
              <button type="submit">Log-in</button>
          </form>
          <% } %>
    </div>
  </main>
  <%- include('includes/footer') %>
</body>